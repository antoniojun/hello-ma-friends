@import '~src/assets/styles/theme-default';

:host{

  .password-rule{
    display: flex;
    align-items: center;
    padding: 12px 0 0 0;
  }

  .tick{

    width: 12px;
    height: 12px;
    border: 1px solid $gray-dark;
    border-radius: 1px;
    display: inline-block;
    position: relative;
    margin-right: 10px;

    ::ng-deep{
      atom-icon{
        position: absolute;
        height: 12px;
        display: flex;
        top: -1px;
        left: 1px;
      }
    }
  }

  p{
    margin: 0;
    font-style: italic;
    font-weight: normal;
    font-size: 12px;
    line-height: 130%;
  }
}


@media ($mobile) {
  :host{
    .password-rule{
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 12px 0 0 0;
    }

    .tick{
      margin-right: 0;
      margin-bottom: 5px;
    }

    p{
      text-align: center;
    }
  }
}
