@import '~src/assets/styles/theme-default';

:host{

  h1, h2, h3, h4, h5, h6{
    font-family: $font-family;
    font-style: normal;
    color: $white;
    font-weight: bold;
    margin: 0;
    padding: 0;
    line-height: 120%;
  }

  h1{
    font-size: 56px;
  }

  h2{
    font-size: 40px;
  }

  h3{
    font-size: 24px;
  }

  h4{
    font-size: 16px;
  }

  h5{
    font-size: 18px;
  }

  h6{
    font-size: 16px;
  }
}


@media ($mobile) {
  :host{
    h1{
      font-size: 24px !important;
    }
  }
}
