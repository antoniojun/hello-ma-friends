@import '~src/assets/styles/theme-default';

:host{

  molecule-card{
    width: 50%;

    ::ng-deep{
      .card--white{
        border-radius: 6px 0px 0px 6px;
      }
      .card--blue{
        border-radius: 0px 6px 6px 0px;
        display: flex;
        flex-direction: row;
        align-items: center;
        padding-right: 90px;

        atom-icon{
          margin-right: 40px;
        }
      }

      form{
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }

      atom-button{
        margin: 5px auto 30px;
      }
    }
  }

  .subtitle{
    margin: 10px 0;
    display: flex;
  }

  .description{
    font-weight: normal;
    font-size: 16px;
    line-height: 130%;
    margin: 0 0 15px;
    font-family: $font-family;
    font-style: normal;
    color: $white;
  }

  .container{
    width: 100%;
    max-width: 960px;
    display: flex;
    height: 78vh;
    max-height: 656px;
  }
}



@media ($mobile) {
  :host{
    molecule-card{
      width: 100%;
      display: flex;

      &:nth-child(1){
        order: 2;
      }

      &:nth-child(2){
        order: 1;
      }

      ::ng-deep{

        .card{
          min-height: auto;
        }

        .card--white{
          border-radius: 6px;
          margin-top: -6px;
          position: relative;
          z-index: 2;
        }
        .card--blue{
          border-radius: 6px 6px 0 0;
        }

        atom-icon{
          display: none;
        }

        atom-title h1{
          font-size: 24px;
        }

        atom-button{
          margin-bottom: 5px;
        }
      }
    }

    .login__title{
      margin: 0 auto 30px;
    }

    .container{
      flex-direction: column;
      margin: 33px 16px 22px;
      width: calc(100% - 32px);
      max-height: none;
      height: auto;
    }

    .subtitle{
      margin-top: 0;
    }

    .description{
      font-size: 14px;
      margin-bottom: 0;
    }
  }
}
