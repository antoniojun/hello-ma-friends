@import '~src/assets/styles/theme-default';

:host{

  .card{
    padding: 52px 70px;
    min-height: 350px;
    border-radius: 6px;
    height: 100%;

    display: flex;
    flex-direction: column;
    justify-content: center;

    &.card--white{
      background-color: #fff;
    }

    &.card--blue{
      background-color: rgba(31, 47, 152, 0.97);
      backdrop-filter: blur(24px);
    }

    &.card--image {
      background-size: cover;
    }
  }
}


@media ($mobile) {

  :host{
    .card{
      padding: 35px 16px;
      width: 100%;

      &.card--blue{
        padding-right: 16px;
      }

      &.card--image {
        background-size: cover;
      }
    }
  }
}
